<?xml version="1.0"?>

<portlet-app
  version="2.0"
  xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
  <portlet>
    <portlet-name>liferay-insults-generator</portlet-name>
    <display-name>Liferay Insults Generator</display-name>
    <portlet-class>com.liferay.lig.portlet.LigPortlet</portlet-class>
    <init-param>
      <name>view-jsp</name>
      <value>/insults/view.jsp</value>
    </init-param>
    <init-param>
      <name>add-process-action-success-action</name>
      <value>false</value>
    </init-param>
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <resource-bundle>content.Language</resource-bundle>
    <portlet-info>
      <title>Liferay Insults Generator</title>
      <short-title>Liferay Insults Generator</short-title>
      <keywords>Liferay Insults Generator</keywords>
    </portlet-info>
    <security-role-ref>
      <role-name>administrator</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>guest</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>power-user</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>user</role-name>
    </security-role-ref>
  </portlet>

  <portlet>
    <portlet-name>lig-admin</portlet-name>
    <display-name>Liferay Insults Admin</display-name>
    <portlet-class>com.liferay.lig.portlet.LigAdminPortlet</portlet-class>
    <init-param>
      <name>view-jsp</name>
      <value>/admin/view.jsp</value>
    </init-param>
    <init-param>
      <name>add-process-action-success-action</name>
      <value>false</value>
    </init-param>
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <resource-bundle>content.Language</resource-bundle>
    <portlet-info>
      <title>Liferay Insults Admin</title>
      <short-title>Liferay Insults Admin</short-title>
      <keywords>Liferay Insults Admin</keywords>
    </portlet-info>
    <security-role-ref>
      <role-name>administrator</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>guest</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>power-user</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>user</role-name>
    </security-role-ref>
  </portlet>

</portlet-app>