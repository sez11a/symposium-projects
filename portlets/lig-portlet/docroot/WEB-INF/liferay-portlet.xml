<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_0_0.dtd">

<liferay-portlet-app>
  <portlet>
    <portlet-name>liferay-insults-generator</portlet-name>
    <icon>/icon.png</icon>
    <portlet-layout-listener-class>com.liferay.lig.listener.StatementCreatorListener</portlet-layout-listener-class>
    <header-portlet-css>/css/portlet.css</header-portlet-css>
    <footer-portlet-javascript>/js/javascript.js</footer-portlet-javascript>
  </portlet>

  <portlet>
    <portlet-name>lig-admin</portlet-name>
    <icon>/icon.png</icon>
    <control-panel-entry-category>content</control-panel-entry-category>
    <control-panel-entry-weight>2.5</control-panel-entry-weight>
    <header-portlet-css>/css/portlet.css</header-portlet-css>
    <footer-portlet-javascript>/js/javascript.js</footer-portlet-javascript>
  </portlet>

  <role-mapper>
    <role-name>administrator</role-name>
    <role-link>Administrator</role-link>
  </role-mapper>
  <role-mapper>
    <role-name>guest</role-name>
    <role-link>Guest</role-link>
  </role-mapper>
  <role-mapper>
    <role-name>power-user</role-name>
    <role-link>Power User</role-link>
  </role-mapper>
  <role-mapper>
    <role-name>user</role-name>
    <role-link>User</role-link>
  </role-mapper>

</liferay-portlet-app>